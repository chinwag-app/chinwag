{{#paper-toolbar}}
	<div class="md-toolbar-tools">
		{{#link-to "index" class="toolbar-back"}}{{paper-icon icon="arrow-back"}}{{/link-to}}
		<span>Settings</span>
	</div>
{{/paper-toolbar}}
{{#paper-list}}
	{{#paper-item}}
		{{#paper-tile-content}}
			{{#if updateShowRefresh}}
				<h3>{{#paper-button raised=true class="md-primary" action="refreshPage"}}Refresh{{/paper-button}}</h3>
			{{else}}
				<h3>{{#paper-button action="checkForUpdates" disabled=updateDisabled}}Check for updates{{/paper-button}}</h3>
			{{/if}}
			{{#if updateLastCheck}}
				<p>Last checked for updates {{time-ago long=true createdAt=updateLastCheck}} ago. Next check in {{time-ago long=true createdAt=updateNextCheck}}.</p>
			{{else}}
				<p>{{updateStatus}}</p>
			{{/if}}
		{{/paper-tile-content}}
	{{/paper-item}}
	{{paper-divider}}
	{{#paper-item}}
		{{#paper-tile-content}}
			<h3>Version</h3>
			<p>Chinwag {{version}}</p>
		{{/paper-tile-content}}
	{{/paper-item}}
	{{paper-divider}}
{{/paper-list}}
