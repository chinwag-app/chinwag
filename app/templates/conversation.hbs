{{#paper-toolbar}}
	<div class="md-toolbar-tools">
		{{#link-to "index" class="toolbar-back"}}{{paper-icon icon="arrow-back"}}{{/link-to}}
		<span>{{name}}</span>
	</div>
{{/paper-toolbar}}

<div class="conversation">
	{{#paper-list class="message-list"}}
		{{#each message in messages}}
			{{#paper-item class="message"}}
				{{#paper-tile-left}}
					<img {{bind-attr src=avatar alt=from title=name}} width="30" height="30" class="face">
				{{/paper-tile-left}}

				{{#paper-tile-content}}
					<h3>{{message.message}}</h3>
					<div class="time">
						{{#if message.isIncoming}}
							{{name}}
						{{else}}
							You
						{{/if}}
						&middot;
						{{time-ago createdAt=message.time}}
					</div>
				{{/paper-tile-content}}
			{{/paper-item}}
		{{/each}}
    {{/paper-list}}
</div>
{{input class="message-field" type="text" placeholder="Send message" value=messageToSend action="sendMessage"}}
