{{#paper-toolbar}}
	<div class="md-toolbar-tools">
		{{#link-to "index" class="toolbar-back"}}{{paper-icon icon="arrow-back"}}{{/link-to}}
		<span>{{contact.name}}</span>
	</div>
{{/paper-toolbar}}

<div class="conversation">
	{{#paper-list class="message-list"}}
		{{#each messages}}
			{{#paper-item class="message"}}
				{{#paper-tile-left}}
					<img {{bind-attr src=conversation.contact.avatar alt=from title=conversation.contact.name}} class="face">
				{{/paper-tile-left}}

				{{#paper-tile-content}}
					<h3>{{message}}</h3>
					<div class="time" {{bind-attr title=timeFormatted}}>{{time-ago createdAt=time}}</div>
				{{/paper-tile-content}}
			{{/paper-item}}
		{{/each}}
    {{/paper-list}}
</div>
{{input class="message-field" type="text" placeholder="Send message" value=messageToSend action="sendMessage"}}