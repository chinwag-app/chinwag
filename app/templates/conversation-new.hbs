{{#paper-toolbar}}
	<div class="md-toolbar-tools">
		{{#link-to "index" class="toolbar-back"}}{{paper-icon icon="arrow-back"}}{{/link-to}}
		<span>Start conversation</span>
	</div>
{{/paper-toolbar}}
{{#paper-list classNames="conversation-list"}}
	{{#each}}
		{{#paper-item classNames="conversation-item"}}
			{{#paper-tile-left}}
				{{#if avatar}}
					<img {{bind-attr src=avatar alt=name title=name}} width="30" height="30" class="face">
				{{else}}
					{{avatar-tile name=account.id class="face"}}
				{{/if}}
			{{/paper-tile-left}}

			{{#paper-tile-content}}
				<h3>{{name}}</h3>
				<h4>{{jid}}</h4>
			{{/paper-tile-content}}
		{{/paper-item}}
		{{paper-divider inset=true}}
	{{/each}}
{{/paper-list}}
